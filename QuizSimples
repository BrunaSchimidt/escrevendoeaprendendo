#exercicio - sistema de perguntas e respostas
import os #importa a opÃ§Ã£o os que apaga tudo da tela.

perguntas = [
    {
        'Pergunta': 'Como Ã© CÃ©u em inglÃªs?',
        'OpÃ§Ãµes': ['Cries', 'Blue', 'kay', 'Sky'],
        'Resposta': 3,
    },
    {
        'Pergunta': 'Como Ã© Porta em inglÃªs?',
        'OpÃ§Ãµes': ['Boor', 'Thron', 'Drorn', 'Door'],
        'Resposta': 3,
    },
    {
        'Pergunta': 'Como Ã© Lixo em inglÃªs?',
        'OpÃ§Ãµes': ['Trish', 'taxs', 'lix', 'Trash'],
        'Resposta': 3,
    },
]

def quiz_perguntas(): #definindo uma string com nome de quiz_perguntas.
    pontuacao = 0 #iniciando a pontuaÃ§Ã£o como 0.

    for pergunta in perguntas:#por cada pergunta em perguntas
        print('ğŸ¤”', pergunta['Pergunta'])#aparece na tela a pergunta , da lista ' perguntas'
        print()

        for i, opcao in enumerate(pergunta['OpÃ§Ãµes']):#
            print(f'{i}) {opcao}')
        
        try:
            resposta = int(input('\nDigite o nÃºmero correspondente Ã  alternativa correta: '))
        except ValueError:
            os.system('cls' if os.name == 'nt' else 'clear')
            print('âš ï¸ Entrada invÃ¡lida! Responda com o nÃºmero da alternativa.')
            continue

        os.system('cls' if os.name == 'nt' else 'clear')

        if resposta == pergunta['Resposta']:
            print('âœ… ParabÃ©ns, vocÃª acertou! ğŸ˜„\n')
            pontuacao += 1
        else:
            correta = pergunta['OpÃ§Ãµes'][pergunta['Resposta']]
            print(f'âŒ VocÃª errou! ğŸ˜¢ A resposta correta era: "{correta}".\n')

    print(f'ğŸ Fim do quiz! Sua pontuaÃ§Ã£o foi de {pontuacao} ponto(s). ğŸ†')

quiz_perguntas()
